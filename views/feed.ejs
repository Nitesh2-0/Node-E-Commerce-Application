            <p class="text-gray-100 text-sm font-awasone">
              <%= product.descpt %>
            </p>
          </div>
          <div class="flex justify-between mt-4">
            <button class="bg-green-900 px-2 rounded-md text-white price">₹ <%= product.productPrice %></button>
            <button class="bg-blue-500 hover:bg-blue-600 py-2 px-4 rounded-md text-white addBtn">Add To Cart</button>
          </div>
