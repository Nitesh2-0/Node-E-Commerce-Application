<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>E-STORE Online | <%= userFeedData.name %>
  </title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="shortcut icon" href="/images/assets/E-store (1).png" type="image/x-icon">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
</head>

<body class="bg-slate-700">
  <div id="loader-background" class="loader-background"></div>
  <div id="loader" class="loader"></div>

  <nav class="bg-gray-800 shadow-lg p-2  fixed top-0 w-full z-10 ">
    <div class="px-6">
      <div class="flex justify-between items-center p-2">
        <!-- Logo -->
        <div class="flex-shrink-0 flex items-center hidden md:block">
          <a href="/feed"
            class="text-white text-2xl hidden md:block font-bold h-auto w-[8rem] overflow-hidden rounded"><img
              src="/images/assets/E-store (1).png" alt="" class=" rounded"></a>
        </div>

        <div class="flex-shrink-0 flex items-center block md:hidden">
          <h1 class="text-red-500 font-bold text-xl">E<span class="text-yellow-500">-</span>STORE</h1>
        </div>

        <!-- Delivering Updates -->
        <div class="hidden md:flex items-center justify-center">
          <i class="ri-map-pin-fill text-white text-xl"></i>
          <div class="ml-2">
            <p class="text-xs text-gray-400 leading-3">Delivering to <span>
                <%= userFeedData.location %>
              </span></p>
            <p class="text-white">Update location</p>
          </div>
        </div>

        <!-- Search Input -->
        <div class="hidden md:flex bg-slate-700 rounded-lg text-white items-center overflow-hidden w-1/2">
          <p class="search-selectv rounded-l w-8 text-white px-2 py-2 rounded-l bg-slate-700 focus:outline-none">All</p>
          <form class="w-full flex items-center" id="formSubmission">
            <input type="text" value="" placeholder="Search Products"
              class="px-3 w-[100%] py-2 w-64 bg-slate-700 text-white rounded-r focus:outline-none placeholder-gray-400"
              id="searchInput" required>
            <div class="p-2 bg-gray-600 h-full rounded-r flex items-center">
              <button type="submit"><i class="ri-search-line cursor-pointer" id="serach"></i></button>
            </div>
          </form>
        </div>

        <!-- Shopping Cart -->
        <div class="relative" id="shopingCart">
          <i class="ri-shopping-bag-4-fill text-white text-xl border-2 border-indigo-600 p-2 rounded-full"
            id="showAllProductOfAddToCart">
            <div class="absolute -top-2 left-1/6 transform -translate-x-1/2 flex items-center justify-center">
              <p class="text-white bg-blue-800 px-2 py-1 rounded-full text-xs" id="productAvilable">0</p>
            </div>
          </i>
        </div>

        <!-- Profile -->
        <div class="flex items-center md:flex">
          <div class="relative items-center">
            <button id="profile-btn" class="text-white focus:outline-none flex flex-col items-center gap-1">
              <img class="h-7 w-7 rounded-full border-2 border-gray-400" src="<%= userFeedData.img %>" alt="">
              <div class="ml-2">
                <p class="text-base text-xs leading-3">
                  <%= userFeedData.name %>
                </p>
              </div>
            </button>
          </div>
        </div>

        <!-- Profile Section -->
        <div class="fixed hidden right-0 top-0 md:w-96 w-full bg-gray-900 h-screen transition-opacity duration-500"
          id="profileSection">
          <div class="w-full h-auto">
            <i class="ri-close-line absolute text-white left-2 top-2 cursor-pointer bg-gray-700 rounded px-2"
              id="profileCloser"></i>
            <div class="w-full pb-12 h-auto bg-gray-700 text-gray-100 pt-12 flex flex-col justify-center items-center">
              <img src="<%= userFeedData.img %>" alt="" class="h-24 w-24 rounded-full border-2 border-gray-400"
                id="profileImag">
            </div>
          </div>
          <hr>
          <div class="w-full h-auto text-gray-100  p-4 px-4 ">
            <div class="mb-2">
              <p><strong>Full Name:</strong>
                <%= user.fullName %>
              </p>
            </div>

            <div class="mb-2">
              <p><strong>Gender :</strong>
                <%= user. sex %>
              </p>
            </div>

            <div class="mb-2">
              <p><strong>Email:</strong>
                <%= user.email %>
              </p>
            </div>

            <div class="mb-2">
              <p><strong>Phone Number : </strong>
                <%= user.CountryCode %>
                  <%= user. phone %>
              </p>
            </div>

            <div class="mb-2">
              <p><strong>Address:</strong>
                <%= user.Locality %>
                  <%= user.State %>
                    <%= user.Zip %>
                      <%= user.Country %>
              </p>
            </div>
          </div>
          <hr>
          <div class="m-2 absolute w-full bottom-0  gap-2">
            <a href="/logout"><button class="text-gray-100 bg-red-600 p-1 px-2 rounded-md"
                id="logout-btn">Logout</button></a>
            <a href="/feed/user/<%= user._id %>"><button class="text-gray-100 bg-green-600 p-1 px-2 rounded-md"
                id="logout-btn">Update Profile</button></a>
            <a href="/sellerProfile"><button class="text-gray-100 bg-yellow-600 p-1 px-2 rounded-md"
                id="logout-btn">Sell Product</button></a>
          </div>
        </div>

        <!-- Mobile Menu bar -->
        <div class="hidden flex gap-10 relative" id="menue">
          <i class="ri-menu-3-line text-white text-5xl"></i>
        </div>

      </div>
    </div>
  </nav>

  <div class="w-full h-auto ">
    <div class="mostFrequent w-full mt-20 bg-gray-800 flex flex-grow-0 gap-10 items-center p-3 px-7 shadow-slate-700">
      <% allProducts.forEach(product=> { %>
        <a href="#" class="optionTag decoration-0 bg-gray-700 px-2 py-1 rounded" id=${idx}>
          <p class="text-white font-awesome text-xs font-semibold">
            <%= product.productName.toUpperCase().trim() %>
          </p>
        </a>
        <% }) %>
    </div>
    <!-- Swiper -->
    <div class="swiper mySwiper w-full bg-gray-700 hidden md:flex">
      <div class="swiper-wrapper bg-gray-700">
        <div class="swiper-slide flex justify-center items-center ">
          <img src="/images/assets/one.png" alt="">
        </div>
        <div class="swiper-slide flex justify-center items-center">
          <img src="/images/assets/online Banner.png" alt="">
        </div>
        <div class="swiper-slide flex justify-center items-center ">
          <img src="/images/assets/two.png" alt="">
        </div>
        <div class="swiper-slide flex justify-center items-center">
          <img src="/images/assets/Nitesh Kumar Yadav (3).png" alt="">
        </div>
      </div>
      <div class="swiper-button-next text-white"></div>
      <div class="swiper-button-prev text-white"></div>
      <div class="swiper-pagination text-white"></div>
    </div>
    <div class="w-full h-64 md:hidden">
      <img src="/images/assets/mobile.png" alt="mobile">
    </div>
  </div>

  <div class="main w-full h-auto bg-slate-700 text-white px-5 flex gap-5 flex-wrap justify-center " id="main-section">
    <% allProducts.forEach(product=> { %>
      <div
        class="w-full md:max-w-[20rem] md:max-h-[32rem] shadow-md bg-gray-800 hover:bg-gray-900  border border-gray-700 rounded-lg overflow-hidden cartFrame">
        <div class="flex overflow-x-auto w-full h-80 w-full" id="scrollBar">
          <% product.images.forEach(image=> { %>
            <img src="/<%= image %>" alt="<%= product.productName %>" class="productImg w-full h-full"
              style="object-position: top;" productId="<%= product._id %>">
            <% }) %>
        </div>
        <div class="p-4">
          <div class="max-h-8 overflow-x-auto py-1 rounded-md" id="scrollBar">
            <p class="text-gray-300 font-semibold text-xs contsPname" id="scrollBar">
              <%= product.productName %>
            </p>
          </div>
          <div class="max-h-12 overflow-y-auto py-1 rounded-md" id="scrollBar">
            <p class="text-gray-100 text-sm font-awasone">
              <%= product.descpt %>
            </p>
          </div>
          <div class="flex justify-between mt-4">
            <% var originalPrice=Math.round(product.productPrice - (product.productPrice*product.offer/100)) %>
              <button class="bg-green-900 px-2 rounded-md text-white price">₹ <%= originalPrice %></button>
              <button class="bg-blue-500 hover:bg-blue-600 py-2 px-4 rounded-md text-white addBtn">Add To Cart</button>
          </div>
        </div>
      </div>
      <% }) %>
  </div>

  <div
    class="fixed top-[7%] md:top-[10%] avilableProductRaper pt-5 p-1 bg-gray-600 overflow-y-auto max-h-[93%] md:max-h-[90%]">
    <h3 class="text-xl font-semibold text-gray-200 text-center p-4 ">All Selected Collections</h3>
    <div class="product-list">
    </div>
    <div class="w-full text-white bg-gray-800 p-4 mt-4">
      <h1 class="text-center mb-2">Total Amount : ₹ <span class="totalAmount">500</span></h1>
      <div class="w-full h-0.5 bg-gray-500 mb-2"></div>
      <form class="pay-form">
        <input type="hidden" value="E-STORE Online" name="name">
        <input type="hidden" value="500" name="amount" id="totals">
        <input type="hidden" value="done" name="description">
        <input type="submit" value="Pay Now"
          class="w-full bg-green-600 text-gray-100 py-3 rounded-lg cursor-pointer hover:bg-green-700 transition-colors duration-300">
      </form>
    </div>
  </div>

  <section class="py-20 px-4 ">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-6 text-white">Become a Product Creator</h2>
      <p class="text-lg text-gray-400 mb-8 ">Join our community of creators and start building your own products
        today.</p>
      <a href="/sellerProfile"
        class="inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-8 rounded-full shadow-md transition duration-300">Get
        Started</a>
    </div>
    <div class="max-w-4xl mx-auto mt-16 grid grid-cols-1 sm:grid-cols-2 gap-12">
      <div class="bg-white rounded-lg p-8 flex items-center justify-center shadow-md">
        <div class="text-blue-500 bg-blue-100 rounded-full p-4">
          <i class="ri-store-line ri-3x"></i>
        </div>
        <div class="ml-6">
          <h3 class="text-xl font-semibold text-gray-800 mb-2">Create Your Own Store</h3>
          <p class="text-gray-600">Start selling your products by creating your own online store.</p>
        </div>
      </div>
      <div class="bg-white rounded-lg p-8 flex items-center justify-center shadow-md">
        <div class="text-blue-500 bg-blue-100 rounded-full p-4">
          <i class="ri-money-dollar-circle-line ri-3x"></i>
        </div>
        <div class="ml-6">
          <h3 class="text-xl font-semibold text-gray-800 mb-2">Earn Money</h3>
          <p class="text-gray-600">Earn money by selling your products and growing your customer base.</p>
        </div>
      </div>
    </div>
  </section>

  <footer class="bg-gray-900 text-white py-8 sm:py-12">
    <div class="container mx-auto flex flex-wrap justify-between px-20">
      <div class="w-full sm:w-1/2 md:w-1/4 mb-6 sm:mb-0">
        <h2 class="text-lg font-semibold mb-4">Navigation</h2>
        <ul>
          <li><a href="#" class="block hover:text-gray-400">Home</a></li>
          <li><a href="#" class="block hover:text-gray-400">Shop</a></li>
          <li><a href="#" class="block hover:text-gray-400">About Us</a></li>
          <li><a href="#" class="block hover:text-gray-400">Contact Us</a></li>
          <li><a href="#" class="block hover:text-gray-400">FAQ</a></li>
        </ul>
      </div>
      <div class="w-full sm:w-1/2 md:w-1/4 mb-6 sm:mb-0">
        <h2 class="text-lg font-semibold mb-4">Social Media</h2>
        <ul>
          <li><a href="#" class="block hover:text-gray-400">Facebook</a></li>
          <li><a href="#" class="block hover:text-gray-400">Twitter</a></li>
          <li><a href="#" class="block hover:text-gray-400">Instagram</a></li>
          <li><a href="#" class="block hover:text-gray-400">Pinterest</a></li>
        </ul>
      </div>
      <div class="w-full sm:w-1/2 md:w-1/4 mb-6 sm:mb-0">
        <h2 class="text-lg font-semibold mb-4">Contact Information</h2>
        <p class="mb-2">Address: Bhopal Madhya Pradesh 46202</p>
        <p class="mb-2">Phone: +91 9155061725</p>
        <p>Email: niteshkr16062004@gmail.com</p>
      </div>
    </div>
    <div class="border-t border-gray-800 mt-8 pt-8 text-center">
      <p class="text-sm">&copy; POMPOM Fruits Store <span class="hidden sm:inline-block">|</span> 2024-2026</p>
    </div>
  </footer>

  <!-- Search Item -->
  <div
    class="w-full md:w-[90%] hidden mt-[4rem] md:mt-20  p-4 max-h-screen  md:max-h-96 bg-gray-900 fixed z-40 top-0 left-1/2 transform -translate-x-1/2 overflow-y-auto mb-12 rounded-b " id="suggestedResult">
    <i class="ri-close-line text-yellow-500 font-bold cursor-pointer" id="close-search"></i>
    <p class="flex justify-center mb-4 text-white text-lg font-semibold">Suggested Result</p>
    <hr class="border-gray-600 mb-4">
    <div class="result-Container w-full"></div>
    
  </div>



  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
  <script src="/javascripts/scrept.js"></script>
</body>

</html>